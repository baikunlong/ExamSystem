                        <AnchorPane prefHeight="200.0" prefWidth="200.0">
                            <children>
                                <TableView fx:id="tableQuestion" layoutX="7.0" layoutY="7.0" prefHeight="475.0" prefWidth="887.0">
                                    <columns>
                                        <TableColumn fx:id="columnQType" prefWidth="78.99998474121094" text="题目类型" />
